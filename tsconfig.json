{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "pretty": true,
    "removeComments": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "declarationDir": "dist",
    "lib": [
      "ES2020",
      "dom",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
